<p id="notice"><%= notice %></p>

<h1>Booking Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Creator</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booking_templates.each do |booking_template| %>
      <tr>
        <td><%= booking_template.name %></td>
        <td><%= booking_template.creator %></td>
        <td><%= booking_template.created_at %></td>
        <td><%= link_to 'Show', booking_template %></td>
        <td><%= link_to 'Edit', edit_booking_template_path(booking_template) %></td>
        <td><%= link_to 'Destroy', booking_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

